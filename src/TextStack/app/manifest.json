{
  "manifest_version": 2,

  "name": "Text stack",
  "description": "This extension collect text selected in page and add it to stack. You can use stack texts for google search.",
  "version": "1.0",

  "permissions": [
   "tabs",
   "clipboardWrite",
   "http://*/*", 
   "https://*/*"
 ],
  "browser_action": {
    "default_icon": {  
            "19": "images/icon-19.png",
            "38": "images/icon-38.png",  
            "128": "images/icon-128.png"         
          },
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["content_script.js"]
        }
    ],
  "commands": {    
    "google-request": {
      "suggested_key": { 
        "default": "Ctrl+Shift+A",
        "mac": "MacCtrl+Shift+A"
        },
      "description": "Make google search from stack"
    },
    "add-selected": {
      "suggested_key": { 
        "default": "Ctrl+Shift+S",
        "mac": "MacCtrl+Shift+S"
        },
      "description": "Add selected text to stack"
    },
    "clear-stack": {
      "suggested_key": { 
        "default": "Ctrl+Shift+X",
        "mac": "MacCtrl+Shift+X"
        },
      "description": "Clear stack"
    }
  }
}